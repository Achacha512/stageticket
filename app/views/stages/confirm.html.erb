<h1>公演者一覧</h1>

<% if @stage.present? %>

  <table class="list">
    <thead>
    <tr>
      <th>公演名</th>
      <th>公演日</th>
      <th>公演時間</th>
      <th>カテゴリー</th>
      <th>TEXT</th>
      <th>S席の値段</th>
      <th>A席の値段</th>
      <th>B席の値段</th>

    </tr>
    </thead>
    <tbody>
    <tr>
      <td style="text-align: right"><%= @stage.title %></td>
      <td><%= @stage.date %></td>
      <td><%= @stage.time == 1 ? "午前の部" : "午後の部" %></td>
      <td><%= @stage.category.name %></td>
      <td><%= @stage.text %></td>
      <td><%= @s_price %></td>
      <td><%= @a_price %></td>
      <td><%= @b_price %></td>
    </tr>
    </tbody>
  </table>
  <%= form_for @stage, url: stages_path do |form| %>
    <%= form.hidden_field :title, :value => @stage.title %>
    <%= form.hidden_field :date, :value => @stage.date %>
    <%= form.hidden_field :time, :value => @stage.time %>
    <%= form.hidden_field :text, :value => @stage.text %>
    <%= form.hidden_field :category_id, :value => @stage.category_id %>
    <%= hidden_field_tag :s_price, @s_price %>
    <%= hidden_field_tag :a_price, @a_price %>
    <%= hidden_field_tag :b_price, @b_price %>
    <%= form.submit "申請" %>
  <% end %>
<% else %>
  <p>公演情報がありません。</p>
<% end %>

