<h1>予約情報</h1>
<table class="list">
  <thead>
  <tr>
    <th>予約番号</th>
    <th>タイトル</th>
    <th>公演者名</th>
    <th>日時</th>
    <th>時間</th>
  </tr>
  </thead>

  <tbody>
  <% @reservations.each do |reservation| %>
    <tr>
      <td style="text-align: center">
        <%= reservation.id %>
      </td>
      <td>
        <%= link_to reservation.stage.title, [current_user, reservation] %>
      </td>
      <td>
        <%= reservation.stage.actor.name %>
      </td>
      <td>
        <%= reservation.stage.date %>
      </td>
      <td>
        <%= reservation.stage.time == 1 ? "午前の部" : "午後の部" %>
      </td>
    </tr>
  <% end %>
  </tbody>

</table>